{
    "name": "logicheck/api",
    "description": "API REST com Slim Framework 4",
    "type": "project",
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.8",
        "respect/validation": "^2.2",
        "doctrine/orm": "^2.16",
        "doctrine/dbal": "^3.7",
        "doctrine/migrations": "^3.7",
        "symfony/cache": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php bin/serve",
        "serve": "php bin/serve",
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "test:feature": "phpunit --testsuite Feature",
        "test:coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "migrate": "php bin/migrate",
        "doctrine": "php bin/doctrine",
        "doctrine-cli": "php bin/doctrine-cli",
        "schema:create": "php bin/doctrine-cli create-schema",
        "schema:update": "php bin/doctrine-cli update-schema",
        "schema:drop": "php bin/doctrine-cli drop-schema",
        "schema:validate": "php bin/doctrine-cli validate-schema",
        "schema:sql": "php bin/doctrine-cli generate-sql",
        "entities:list": "php bin/doctrine-cli list-entities",
        "cache:clear": "rm -rf cache/*",
        "logs:clear": "rm -rf logs/*"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
