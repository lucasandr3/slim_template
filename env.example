# Configurações da Aplicação
APP_NAME="API Base de Autenticação"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_VERSION=1.0.0

# Configurações do Banco de Dados
# Suporte: MySQL, PostgreSQL, SQLite
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=logicheck_slim_api
DB_USERNAME=postgres
DB_PASSWORD=

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400

# Configurações de Log
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_FILES=30

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configurações de Email (opcional - para verificação de email)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourapp.com
MAIL_FROM_NAME="API Base"

# Configurações de Cache (opcional)
CACHE_DRIVER=file
CACHE_TTL=3600

# Configurações de CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
